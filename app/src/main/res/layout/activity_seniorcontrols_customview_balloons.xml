<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seniorcontrols_customview_balloons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.treasure_ct.android_xt.studyfragment.seniorcontrols.customview.BalloonsActivity">
    <TextSwitcher
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#615959"
        android:layout_marginTop="20dp"
        android:id="@+id/balloon_score"/>

    <com.treasure_ct.android_xt.studyfragment.seniorcontrols.customview.widgets.BalloonBoom
        android:id="@+id/balloon_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>
