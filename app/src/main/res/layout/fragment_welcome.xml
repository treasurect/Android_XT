<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.treasure_ct.android_xt.welcomfragment.WelcomeFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <android.support.design.widget.AppBarLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#e60b99">
           <android.support.v7.widget.Toolbar
               android:layout_width="match_parent"
               android:layout_height="?actionBarSize">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/welcome_qrcode"
                       android:layout_width="30dp"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/icon_scan"
                       android:layout_marginRight="5dp"/>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/edittext_bg"
                       android:orientation="horizontal"
                       android:layout_weight="1">
                       <Button
                           android:id="@+id/welcome_search"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:text="请输入关键词"
                           android:gravity="left|center_vertical"
                           android:textColor="#444"
                           android:background="#0000"/>
                       <ImageView
                           android:id="@+id/welcome_camera"
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:layout_marginRight="5dp"
                           android:layout_gravity="center_vertical|right"
                           android:src="@mipmap/icon_camera"/>
                   </LinearLayout>
                   <ImageView
                       android:id="@+id/welcome_chat"
                       android:layout_width="30dp"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:src="@mipmap/icon_chat"/>
               </LinearLayout>
           </android.support.v7.widget.Toolbar>
       </android.support.design.widget.AppBarLayout>
       <android.support.v4.view.ViewPager
           android:id="@+id/welcome_viewPager"
           android:layout_width="match_parent"
           android:layout_height="150dp"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           android:id="@+id/welcome_camera_img"/>
   </LinearLayout>
</ScrollView>
