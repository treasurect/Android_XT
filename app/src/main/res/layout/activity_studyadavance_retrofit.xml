<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_studyadavance_retrofit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.treasure_ct.android_xt.studyfragment.studyadvance.retrofit.RetrofitActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Retrofit 练习"
        android:textColor="#f10443"
        android:textSize="30sp"
        android:gravity="center"/>
    <Button
        android:id="@+id/getClassify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求图片分类"/>
    <Button
        android:id="@+id/getApiList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取图片分类的图片列表"/>
    <Button
        android:id="@+id/getServerVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取服务器版本号"/>
    <Button
        android:id="@+id/btnPostLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交Post请求"/>
    <Button
        android:id="@+id/btnPutJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交Put请求,并且提交Json"/>
    <Button
        android:id="@+id/btnUploadFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件上传"/>

</LinearLayout>
