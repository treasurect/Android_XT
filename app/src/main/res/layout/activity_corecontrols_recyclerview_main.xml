<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_corecontrols_recyclerview_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79ddf5"
    tools:context="com.treasure_ct.android_xt.studyfragment.corecontrols.RecyclerViewActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridView 垂直样式"
        android:id="@+id/recyclerview_girdVer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/recyclerview_girdHor"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridView 水平样式"
        android:id="@+id/recyclerview_girdHor"
        android:layout_marginBottom="145dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView 样式"
        android:id="@+id/recyclerview_list"
        android:layout_above="@+id/recyclerview_girdVer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"/>
</RelativeLayout>
