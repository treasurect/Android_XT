<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_corecontrols_popup_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.treasure_ct.android_xt.studyfragment.corecontrols.PopUpWindowActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showAtLocation显示窗体"
        android:textColor="#f00"
        android:id="@+id/popupWindow_showAtLocation"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="showAsDropDown显示窗体"
        android:textColor="#00f"
        android:layout_marginTop="10dp"
        android:id="@+id/popupWindow_showAsDropDown"/>
</LinearLayout>
