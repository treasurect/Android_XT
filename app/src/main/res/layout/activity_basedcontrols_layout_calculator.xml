<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#888">
    <EditText
        android:id="@+id/result_line"
        android:layout_height="100dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="15dip"
        android:editable="false"
        android:textSize="25sp"
        android:gravity="right|bottom"
        android:background="@drawable/calculator_input_bg"/>
    <LinearLayout
        android:layout_height="0sp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp">
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="mc"
            android:background="@drawable/calculator_key_bg"
            />
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="m+"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:text="m-"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:text="mr"
            android:background="@drawable/calculator_key_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0sp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:id="@+id/clear"
            android:text="C"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/divide"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:text="/"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/multiply"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:text="*"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/delete"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:text="删除"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0sp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/num7"
            android:background="@drawable/calculator_key_bg"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="7"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/num8"
            android:background="@drawable/calculator_key_bg"
            android:layout_marginRight="10dp"
            android:text="8"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/calculator_key_bg"
            android:layout_marginRight="10dp"
            android:id="@+id/num9"
            android:text="9"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/subtract"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0sp"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/calculator_key_bg"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/num4"
            android:text="4"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/num5"
            android:background="@drawable/calculator_key_bg"
            android:layout_marginRight="10dp"
            android:text="5"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/num6"
            android:background="@drawable/calculator_key_bg"
            android:layout_marginRight="10dp"
            android:text="6"/>
        <Button
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/add"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_height="0sp"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="0sp"
            android:layout_weight="3"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="0sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/num1"
                    android:background="@drawable/calculator_key_bg"
                    android:layout_marginRight="10dp"
                    android:text="1"/>
                <Button
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/calculator_key_bg"
                    android:layout_marginRight="10dp"
                    android:id="@+id/num2"
                    android:text="2"/>
                <Button
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/calculator_key_bg"
                    android:id="@+id/num3"
                    android:text="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="0sp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">
                <Button
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:id="@+id/num0"
                    android:background="@drawable/calculator_key_bg"
                    android:layout_marginRight="10dp"
                    android:text="0"/>
                <Button
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/diot"
                    android:background="@drawable/calculator_key_bg"
                    android:text="."/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_height="fill_parent"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:id="@+id/equal"
            android:layout_marginRight="10dp"
            android:background="@drawable/calculator_key_bg"
            android:text="="/>
    </LinearLayout>

</LinearLayout>
